{
  "name": "svelte-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run build-vite-watch\" \"dotnet watch run --project ./src/backend/GraphVisualizer\"",
    "dev-vite": "vite",
    "build": "concurrently \"npm run build-vite\" \"dotnet build\"",
    "build-vite": "vite build --emptyOutDir --config ./vite.config.js",
    "build-vite-watch": "vite build --emptyOutDir --config ./vite.config.js --watch",
    "preview-vite": "vite preview"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "daisyui": "^4.9.0",
    "postcss": "^8.4.38",
    "svelte": "^4.2.12",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0"
  }
}
